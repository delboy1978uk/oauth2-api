          {
            "name": "confirm",
            "in": "formData",
            "description": "password confirmation",
            "required": true,
            "type": "string",
            "default": "password"
          }
        ],
        "responses": {
          "200": {
            "description": "Registers a new unactivated user"
          }
        }
      }
    },
